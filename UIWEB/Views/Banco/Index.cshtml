
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/angularJs/Controladores/BancoControlador.js"></script>
<div id="divBanco" ng-controller="BancoControlador as cBanco">

    
    <div class="row">
        <div class="col-md-8">
            <div dismiss-on-timeout="4000" uib-alert ng-class="'alert-' + (cBanco.AlertaTipo || 'warning')" close="cBanco.CloseAlert()" ng-if="cBanco.MostrarValidacion">{{cBanco.AlertaMensaje}}</div>

            <h1>
                Banco
          
                <button type="button" class="btn btn-warning" aria-label="Left Align" ng-click="cBanco.Nuevo()">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
            </h1>
        </div>
        <div class="col-md-4">
        </div>
       
    </div>




    <table class="table table-striped table-bordered table-hover" datatable="ng" dt-options="cBanco.dtOptions">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Fecha Registro</th>
                <th>acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr data-ng-repeat="Banco in cBanco.Bancos">
                <td>{{Banco.Id}}</td>
                <td>{{Banco.Nombre}}</td>
                <td>{{Banco.Direccion}}</td>
                <td>{{Banco.FechaRegistroString}}</td>
                <td>


                    <button type="button" class="btn btn-default" aria-label="Left Align" ng-click="cBanco.Eliminar(Banco,$index)">
                        <span class="glyphicon glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>

        </tbody>

    </table>

</div>
