
@{
    ViewBag.Title = "Index";
}



<script src="~/Scripts/angularJs/Controladores/SucursalControlador.js"></script>
<div id="divBanco" ng-controller="SucursalControlador as cSucursal">

    <div class="row">
        <div class="col-md-8">
            <div dismiss-on-timeout="4000" uib-alert ng-class="'alert-' + (cSucursal.AlertaTipo || 'warning')" close="cSucursal.CloseAlert()" ng-if="cSucursal.MostrarValidacion">{{cSucursal.AlertaMensaje}}</div>

            <h1>
                Sucursal
                <button type="button" class="btn btn-warning" aria-label="Left Align" ng-click="cSucursal.Nuevo()">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
            </h1>
        </div>
        <div class="col-md-4">
        </div>
    </div>




    <table class="table table-striped table-bordered table-hover" datatable="ng" dt-options="cSucursal.dtOptions">
        <thead>
            <tr>
                <th>Id</th>
                <th>Banco</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Fecha Registro</th>
                <th>acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr data-ng-repeat="Sucursal in cSucursal.Sucursals">
                <td>{{Sucursal.Id}}</td>
                <td>{{Sucursal.Banco.Nombre}}</td>
                <td>{{Sucursal.Nombre}}</td>
                <td>{{Sucursal.Direccion}}</td>
                <td>{{Sucursal.FechaRegistroString}}</td>
                <td>

                    <button type="button" class="btn btn-default" aria-label="Left Align" ng-click="cSucursal.Eliminar(Sucursal,$index)">
                        <span class="glyphicon glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>

        </tbody>

    </table>

</div>
